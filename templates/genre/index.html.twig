{% extends 'base.html.twig' %}

{% block title %}Liste des différents genre de Livres
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello voici les genres que vous pouvez retrouver ✅</h1>


		<ul>
		
			{% for genre in genres %}
				<li class="row">
					<div class="col-3">
					{{genre.nom}}
					</div>
					<div class="col-3">
					{{genre.description}}
					</div>
					<div class="col-3">
					<a href="{{path('app_modifierGenre', {'id':genre.id})}}" class="btn btn-primary">Modifier</a>
					
					</div>
					
				</li>
			{% endfor %}


		</ul>
	</div>
{% endblock %}
